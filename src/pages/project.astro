---
//import "aos/dist/aos.css";
import '/src/styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Projects from '../components/Projects.jsx';
---

<html lang="en">
    <head>
        <link rel="icon" type="image/x-icon" href="../img/raja-logo.ico">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <script src="https://kit.fontawesome.com/1f814a61ce.js" crossorigin="anonymous"></script>
        <title>RAJA MEISSNER</title>
    </head>
    <body class="flex flex-col justify-center items-center overflow-x-hidden">
        <Header />
        <main class="min-h-[100vh] flex flex-col justify-center w-full">
          <div data-aos="fade-up" data-aos-delay="300" class="flex justify-center ">
            <img class="w-[90%] h-[250px] object-cover object-" src="../img/PRO-1.jpg" alt="raja meissner">
          </div>
          <div data-aos="fade-up" data-aos-delay="500" class="flex p-5 flex-col items-center py-10 gap-5">
            <h2 class="text-5xl font-bold">PROJECTS</h2>
            <p class="text-xl">Watch out my projects, you can also watch full of them and my videos on my <a class="underline" target="_blank" href="https://youtube.com">YouTube</a> channel!</p>
            <a href="#projects"
              class="group/button relative inline-flex items-center justify-center overflow-hidden rounded-md bg-black backdrop-blur-lg px-1 py-1 w-[200px] text-base font-semibold text-white transition-all duration-300 ease-in-out hover:shadow-xl hover:shadow-gray-600/50 border border-white/20 cursor-pointer"
            >
              <span class="text-lg">My projects!</span>
            </a>
          </div>
          </main>

          <Projects />
        <!-- FOOTER -->
       <section>
        <Footer />
     </section>

    </body>
    <script src="../../src/js/global.js"></script>
    <style is:global>
        html{
            scroll-behavior: smooth;
            overflow-x: hidden;
        }
    </style>
</html>
